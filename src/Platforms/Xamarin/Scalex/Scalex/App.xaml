<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

             x:Class="Scalex.App">
    <Application.Resources>

        <ResourceDictionary>
            <!--MergedWith="dark:DarkThemeResources"-->

            <Color x:Key="Primary">#780000</Color>
            <Color x:Key="PrimaryDark">#010101</Color>
            <Color x:Key="PrimaryDarkForeground">#ffffff</Color>
            <Color x:Key="Accent">#FF3434</Color>
            <Color x:Key="LightBackgroundColor">#780000</Color>
            <Color x:Key="DarkBackgroundColor">#303030</Color>
            <Color x:Key="MediumGrayTextColor">#4d4d4d</Color>
            <Color x:Key="LightTextColor">#999999</Color>
            <Color x:Key="PrimaryBackgroundColor">#33302E</Color>
            <Color x:Key="PrimaryTextColor">White</Color>
            <Color x:Key="MutedForegroundColor">#4d4d4d</Color>

            <Style TargetType="ContentPage" ApplyToDerivedTypes="True">

                <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryDark}" />
            </Style>
            <Style TargetType="NavigationPage" ApplyToDerivedTypes="True">

                <Setter Property="BarBackgroundColor" Value="{DynamicResource PrimaryBackgroundColor}" />
                <Setter Property="BarTextColor" Value="{DynamicResource PrimaryTextColor}" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
            </Style>

            <Style TargetType="TextCell">
                <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
            </Style>
            <Style x:Key="Header" TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
                <Setter Property="FontSize" Value="Medium" />
            </Style>

            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{DynamicResource DarkBackgroundColor}" />
                <Setter Property="TextColor" Value="{DynamicResource PrimaryDarkForeground}" />
                <Setter Property="FontSize" Value="Medium" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>