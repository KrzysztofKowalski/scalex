<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Scalex.Views.IntroPage" Title="Soundshed.com Guitar Toolkit">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"></RowDefinition>
                <RowDefinition Height="48"></RowDefinition>
                <RowDefinition Height="48"></RowDefinition>
                <RowDefinition Height="48"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200*"></ColumnDefinition>
                <ColumnDefinition Width="200*"></ColumnDefinition>
                <ColumnDefinition Width="200*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Row="0" x:Name="LogoImage" Grid.RowSpan="4" Grid.ColumnSpan="3" ></Image>
            <Label StyleClass="Header"  Grid.Row="0" Grid.Column="0" Text="Learn" />

            <Button Grid.Row="1" Grid.Column="0" StyleClass="Primary" x:Name="Scales" Text="Scales &amp; Arpeggios" Clicked="Scales_Clicked" WidthRequest="200"></Button>
            <Button Grid.Row="2" Grid.Column="0" x:Name="Chords" Text="Chords" Clicked="Chords_Clicked"></Button>

            <Label  StyleClass="Header" Grid.Row="0" Grid.Column="1" Text="Play" />
            <Button Grid.Row="1" Grid.Column="1" x:Name="Tablature" Text="Tablature" Clicked="Tablature_Clicked"></Button>

            <Label  StyleClass="Header" Grid.Row="0" Grid.Column="2" Text="Perform" />
            <Button Grid.Row="1" Grid.Column="2"  x:Name="Soundshed" Text="Join a Band" Clicked="Soundshed_Clicked"></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>